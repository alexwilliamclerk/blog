---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const poems = await getCollection("poems");
  return poems.map((p) => ({
    params: { slug: p.slug },
    props: { poem: p },
  }));
}

const { poem } = Astro.props;
const { Content } = await poem.render();
const title = poem.data.title;
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={title} />
    <style>
      :root{
        --bg:#0b0f0d; --text:#e7efe9; --muted:#9fb3a7;
        --line:rgba(255,255,255,.08); --brand:#8ee6b0;
      }
      *{box-sizing:border-box}
      body{margin:0;font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "PingFang SC","Microsoft YaHei", sans-serif;
        background: radial-gradient(1100px 700px at 20% -10%, rgba(142,230,176,.18), transparent 55%), var(--bg);
        color:var(--text);
      }
      a{color:inherit;text-decoration:none}
      .wrap{max-width:760px;margin:0 auto;padding:22px 16px 70px}
      .top{
        display:flex;align-items:center;justify-content:space-between;
        padding:10px 4px 18px;border-bottom:1px solid var(--line);
      }
      .brand{display:flex;align-items:center;gap:10px;font-weight:800}
      .dot{width:10px;height:10px;border-radius:999px;background:var(--brand);box-shadow:0 0 18px rgba(142,230,176,.55)}
      .pill{border:1px solid var(--line);background:rgba(255,255,255,.03);padding:10px 12px;border-radius:999px;font-size:14px}
      .pill:hover{border-color:rgba(142,230,176,.35)}
      h1{margin:18px 4px 8px;font-size:26px;letter-spacing:.2px}
      .meta{margin:0 4px 18px;color:var(--muted);display:flex;gap:10px;flex-wrap:wrap;font-size:13px}
      .tag{border:1px solid var(--line);padding:4px 8px;border-radius:999px;background:rgba(255,255,255,.02)}
      article{
        margin:0 4px;
        border:1px solid var(--line);
        border-radius:18px;
        padding:18px 16px;
        background:linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.02));
      }
      article :global(p){
        margin:0 0 12px;
        line-height:1.9;
        font-size:16px;
        white-space:pre-wrap;
      }
      .tools{margin:14px 4px 0; display:flex; gap:10px; flex-wrap:wrap}
      button{
        cursor:pointer;
        border:1px solid var(--line);
        background:rgba(255,255,255,.03);
        color:var(--text);
        padding:10px 12px;border-radius:999px;
        font-size:14px;
      }
      button:hover{border-color:rgba(142,230,176,.35)}
      .hint{color:var(--muted);font-size:12px;margin-left:6px}
    </style>
  </head>
  <body>
    <div class="wrap">
      <header class="top">
        <div class="brand"><span class="dot"></span><span>诗歌</span></div>
        <nav style="display:flex;gap:10px">
          <a class="pill" href="/poems">返回列表</a>
          <a class="pill" href="/">首页</a>
        </nav>
      </header>

      <h1>{title}</h1>
      <div class="meta">
        <span>{poem.data.date}</span>
        {poem.data.tags.map((t) => <span class="tag">#{t}</span>)}
      </div>

      <article>
        <Content />
      </article>

      <div class="tools">
        <button id="copy">复制全文</button>
        <span class="hint" id="hint"></span>
      </div>
    </div>

    <script>
      const btn = document.getElementById("copy");
      const hint = document.getElementById("hint");
      btn?.addEventListener("click", async () => {
        const text = document.querySelector("article")?.innerText || "";
        try{
          await navigator.clipboard.writeText(text.trim());
          hint.textContent = "已复制";
          setTimeout(()=> hint.textContent="", 1200);
        }catch(e){
          hint.textContent = "复制失败（浏览器权限）";
        }
      });
    </script>
  </body>
</html>