---
import { getCollection } from "astro:content";

const poems = (await getCollection("poems"))
  .sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>诗歌</title>
    <meta name="description" content="诗歌列表" />
    <style>
      :root{
        --bg:#0b0f0d; --card:#0f1713; --text:#e7efe9; --muted:#9fb3a7;
        --line:rgba(255,255,255,.08); --brand:#8ee6b0; --radius:18px;
      }
      *{box-sizing:border-box}
      body{margin:0;font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "PingFang SC","Microsoft YaHei", sans-serif;
        background: radial-gradient(1100px 700px at 20% -10%, rgba(142,230,176,.18), transparent 55%), var(--bg);
        color:var(--text);
      }
      a{color:inherit;text-decoration:none}
      .wrap{max-width:980px;margin:0 auto;padding:22px 16px 70px}
      .top{
        display:flex;align-items:center;justify-content:space-between;
        padding:10px 4px 18px;border-bottom:1px solid var(--line);
      }
      .brand{display:flex;align-items:center;gap:10px;font-weight:800}
      .dot{width:10px;height:10px;border-radius:999px;background:var(--brand);box-shadow:0 0 18px rgba(142,230,176,.55)}
      .pill{border:1px solid var(--line);background:rgba(255,255,255,.03);padding:10px 12px;border-radius:999px;font-size:14px}
      .pill:hover{border-color:rgba(142,230,176,.35)}
      .grid{padding:22px 4px;display:grid;grid-template-columns:repeat(3,1fr);gap:12px}
      .card{
        border:1px solid var(--line);border-radius:16px;overflow:hidden;
        background:linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.02));
        min-height:160px;position:relative;
      }
      .card:before{content:"";position:absolute;inset:0;background: radial-gradient(520px 220px at 20% 10%, rgba(142,230,176,.14), transparent 55%);}
      .meta{position:absolute;left:12px;right:12px;bottom:12px;display:flex;flex-direction:column;gap:8px}
      .title{font-weight:900;font-size:16px;line-height:1.3}
      .sub{display:flex;gap:10px;flex-wrap:wrap;color:var(--muted);font-size:12px}
      .tag{border:1px solid var(--line);padding:4px 8px;border-radius:999px;background:rgba(255,255,255,.02)}
      .empty{
        padding:26px 4px;
        color:var(--muted);
        font-size:14px;
      }
      @media (max-width:760px){.grid{grid-template-columns:repeat(2,1fr)}}
    </style>
  </head>
  <body>
    <div class="wrap">
      <header class="top">
        <div class="brand"><span class="dot"></span><span>诗歌</span></div>
        <nav style="display:flex;gap:10px">
          <a class="pill" href="/">返回首页</a>
          <a class="pill" href="/search">搜索</a>
        </nav>
      </header>

      {poems.length === 0 ? (
        <div class="empty">还没有诗歌内容。把 Markdown 放进 src/content/poems/ 就会自动出现。</div>
      ) : (
        <section class="grid">
          {poems.map((p) => (
            <a class="card" href={`/poems/${p.slug}`}>
              <div class="meta">
                <div class="title">{p.data.title}</div>
                <div class="sub">
                  <span>{p.data.date}</span>
                  {p.data.tags.map((t) => <span class="tag">#{t}</span>)}
                </div>
              </div>
            </a>
          ))}
        </section>
      )}
    </div>
  </body>
</html>